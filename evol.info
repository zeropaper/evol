name="Evol"
description="Evol is a tribute to my skate shoes and a base theme for kick ass Drupal designs.
It might be used in conjunction with SASS/Compass."
screenshot = "images/screenshot.png"
version = VERSION
core = 6.x
engine = phptemplate


plugins[panels][layouts] = plugins/panels/layouts
plugins[panels][styles] = plugins/panels/styles
plugins[ztools][theme_setting] = plugins/ztools/theme_setting

;features[] = logo
features[] = name
;features[] = node_user_picture
;features[] = comment_user_picture
features[] = search
;features[] = favicon
features[] = primary_links

; Site logo
designkit[image][logo][title] = "Site logo"
designkit[image][logo][description] = "Header logo."
designkit[image][logo][imagecache] = "imagecache_scale:220x80"


; Background
designkit[color][background_color][title] = "Background"
designkit[color][background_color][description] = "Background color."
designkit[color][background_color][default] = "#d0dcdc"

; Foreground
designkit[color][foreground_color][title] = "Foreground"
designkit[color][foreground_color][description] = "Foreground color."
designkit[color][foreground_color][default] = "#dd4422"

; Header
designkit[color][header_color][title] = "Header"
designkit[color][header_color][description] = "Header color."
designkit[color][header_color][default] = "#333333"

; Color coding: green
designkit[color][cc_green][title] = "Code: green"
